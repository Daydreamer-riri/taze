{
  "name": "taze",
  "version": "0.3.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "typing": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "cross-env DEBUG=taze:* esno ./src/cli.ts",
    "build": "tsup ./src/index.ts ./src/cli.ts --dts --format esm,cjs --legacy-output",
    "release": "pnpx bumpp --commit --tag && pnpm build && esno ./scripts/prepublish.ts && pnpm publish --no-git-checks && esno ./scripts/postpublish.ts && git push",
    "test": "ava"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "taze": "bin/taze.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/taze.git"
  },
  "bugs": {
    "url": "https://github.com/antfu/taze/issues"
  },
  "homepage": "https://github.com/antfu/taze#readme",
  "dependencies": {
    "chalk": "^4.1.0",
    "cli-progress": "^3.8.2",
    "debug": "^4.3.1",
    "deepmerge": "^4.2.2",
    "fast-glob": "^3.2.5",
    "find-up": "^5.0.0",
    "libnpmconfig": "^1.2.1",
    "pacote": "^11.2.3",
    "semver": "^7.3.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.4.3",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@types/cli-progress": "^3.8.0",
    "@types/debug": "^4.1.5",
    "@types/node": "^14.14.22",
    "@types/pacote": "^11.1.0",
    "@types/semver": "^7.3.4",
    "@types/yargs": "^15.0.12",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "ava": "^3.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "esm": "^3.2.25",
    "esno": "^0.4.0",
    "tsup": "^3.11.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "esm",
      "esbuild-register"
    ]
  }
}
