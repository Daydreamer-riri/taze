{
  "name": "taze",
  "version": "0.4.6",
  "description": "A modern cli tool that keeps your deps fresh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/taze.git"
  },
  "funding": "https://github.com/sponsors/antfu",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "taze": "bin/taze.js"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "dev": "cross-env DEBUG=taze:* esno ./src/cli.ts",
    "build": "rimraf dist && tsup ./src/index.ts ./src/cli.ts --dts --format esm,cjs",
    "release": "pnpx bumpp --commit --tag && pnpm build && esno ./scripts/prepublish.ts && pnpm publish --no-git-checks && esno ./scripts/postpublish.ts && git push",
    "test": "vitest"
  },
  "bugs": {
    "url": "https://github.com/antfu/taze/issues"
  },
  "homepage": "https://github.com/antfu/taze#readme",
  "dependencies": {
    "@antfu/ni": "^0.13.2",
    "cli-progress": "^3.10.0",
    "debug": "^4.3.3",
    "deepmerge": "^4.2.2",
    "execa": "^5.0.0",
    "fast-glob": "^3.2.11",
    "find-up": "^5.0.0",
    "libnpmconfig": "^1.2.1",
    "pacote": "^11",
    "picocolors": "^1.0.0",
    "semver": "^7.3.5",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.8",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/cli-progress": "^3.9.2",
    "@types/debug": "^4.1.7",
    "@types/node": "^17.0.21",
    "@types/pacote": "^11.1.3",
    "@types/semver": "^7.3.9",
    "@types/yargs": "^17.0.9",
    "bumpp": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "rimraf": "^3.0.2",
    "tsup": "^5.12.1",
    "typescript": "^4.6.2",
    "vitest": "^0.7.0"
  },
  "eslintConfig": {
    "extends": "@antfu/eslint-config"
  }
}
